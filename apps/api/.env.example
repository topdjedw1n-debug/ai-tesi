# Environment
ENVIRONMENT=development
DEBUG=True

# Security (REQUIRED - generate secure key!)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=your-secret-key-min-32-chars-change-this-in-production

# Database (REQUIRED)
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/ai_thesis_platform

# Redis (REQUIRED)
REDIS_URL=redis://localhost:6379

# AI Providers (Optional - needed for generation features)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# MinIO/S3 Storage (Optional)
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ai-thesis-documents
MINIO_SECURE=false

# Email (Optional - for production)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAILS_FROM_EMAIL=
EMAILS_FROM_NAME=

# Monitoring (Optional)
SENTRY_DSN=

# CORS (Development defaults)
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]
ALLOWED_HOSTS=["localhost","127.0.0.1","0.0.0.0"]
