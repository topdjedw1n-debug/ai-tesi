# Production Environment Configuration
# Copy this file to .env.production and fill in your actual values

# Database
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_SECURE_PASSWORD@postgres:5432/ai_thesis_platform
POSTGRES_DB=ai_thesis_platform
POSTGRES_USER=postgres
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD

# Security
SECRET_KEY=YOUR_SECURE_SECRET_KEY_MIN_32_CHARS
JWT_SECRET=YOUR_SECURE_JWT_SECRET_MIN_32_CHARS

# AI APIs
OPENAI_API_KEY=sk-proj-YOUR_OPENAI_KEY
ANTHROPIC_API_KEY=sk-ant-YOUR_ANTHROPIC_KEY
TAVILY_API_KEY=tvly-YOUR_TAVILY_KEY

# AI Configuration
AI_MAX_RETRIES=3
AI_RETRY_DELAYS=2,4,8
AI_ENABLE_FALLBACK=true
AI_FALLBACK_CHAIN=openai:gpt-4,openai:gpt-3.5-turbo,anthropic:claude-3-5-sonnet-20241022

# Quality Gates
QUALITY_MAX_GRAMMAR_ERRORS=10
QUALITY_MIN_PLAGIARISM_UNIQUENESS=85.0
QUALITY_MAX_AI_DETECTION_SCORE=55.0
QUALITY_MAX_REGENERATE_ATTEMPTS=2
QUALITY_GATES_ENABLED=true
QUALITY_GATES_MAX_CONTEXT_SECTIONS=10

# Storage (MinIO)
MINIO_ENDPOINT=minio:9000
MINIO_ROOT_USER=minioadmin
MINIO_ROOT_PASSWORD=YOUR_SECURE_MINIO_PASSWORD
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=YOUR_SECURE_MINIO_PASSWORD
MINIO_BUCKET=tesigo-documents

# Redis
REDIS_URL=redis://redis:6379

# Payment (Stripe)
STRIPE_SECRET_KEY=sk_live_YOUR_STRIPE_SECRET_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_WEBHOOK_SECRET
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_STRIPE_PUBLISHABLE_KEY

# Environment
ENVIRONMENT=production
DEBUG=false

# CORS & Security
# IMPORTANT: Replace with your actual domain/IP
CORS_ALLOWED_ORIGINS=http://YOUR_SERVER_IP:3000
ALLOWED_HOSTS=["YOUR_SERVER_IP","localhost","127.0.0.1"]
FRONTEND_URL=http://YOUR_SERVER_IP:3000

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=http://YOUR_SERVER_IP:8000

# Optional: Disable rate limiting for testing
DISABLE_RATE_LIMIT=false
