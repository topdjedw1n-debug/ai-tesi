# TesiGo v2.3 Environment Variables Template
# Copy this file to .env and fill in the actual values

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql+asyncpg://USER:PASSWORD@HOST:5432/DBNAME

# ==========================================
# Redis Configuration
# ==========================================
REDIS_URL=redis://HOST:6379/0

# ==========================================
# Security & Authentication
# ==========================================
SECRET_KEY=change_me_minimum_32_characters_long_secret_key_here
JWT_SECRET=
JWT_ALG=HS256
JWT_EXP_MIN=30
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ==========================================
# AI Provider API Keys
# ==========================================
OPENAI_API_KEY=sk-...
ANTHROPIC_API_KEY=sk-ant-...

# ==========================================
# Search APIs for RAG (Retrieval-Augmented Generation)
# ==========================================
# Tavily API - Academic search (REQUIRED for RAG pipeline)
TAVILY_API_KEY=tvly-...

# Semantic Scholar API - Free academic papers API (OPTIONAL: improves rate limits)
# Get key at: https://www.semanticscholar.org/product/api#api-key
SEMANTIC_SCHOLAR_API_KEY=

# Perplexity API - Optional alternative for web search
PERPLEXITY_API_KEY=

# Serper API - Optional Google search integration
SERPER_API_KEY=

# ==========================================
# Application Configuration
# ==========================================
ENVIRONMENT=development
DEBUG=true
API_V1_STR=/api/v1
PROJECT_NAME=AI Thesis Platform

# ==========================================
# CORS Configuration
# ==========================================
CORS_ALLOWED_ORIGINS=

# ==========================================
# File Storage & Export
# ==========================================
DOCX_EXPORT_PATH=/app/storage/exports
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET=ai-thesis-documents
MINIO_SECURE=false

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO

# ==========================================
# Monitoring & Error Tracking
# ==========================================
SENTRY_DSN=
